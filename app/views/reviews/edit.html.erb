<h1 class="mb-4">Edit Review</h1>

<%= form_for ([@album, @review]) do |f| %>

  <div id="rating-form" class="mb-4 flex">
    <%= f.label :rating %>
  </div>

  <div class="mb-4">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <%= f.submit class: "my-4 bg-red-700 hover:bg-red-500 text-yellow-100 font-bold py-2 px-4 border border-red-700 rounded" %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>