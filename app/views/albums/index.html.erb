<% if @albums.count == 0 %>

  <h1>There are currently no albums in this Genre</h1>

<% else%>

  <h1><%= params[:genre] %></h1>

  <% @albums.each do |album| %>
    <div>
      <h1><%= link_to album.title, album_path(album) %></h1>
      <h1><%= album.artist %></h1>
    </div>
  <% end %>

<% end %>

