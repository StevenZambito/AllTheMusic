<div class="text-center">
  <div>
    <%= form_tag albums_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search], class: "mt-5 bg-gray-100 w-1/3 py-2 border-b-2 border-gray-600 outline-none focus:border-green-400", placeholder: 'Search' %>
      <%# <%= submit_tag "Search" %>
    <% end %>
  </div>
  
</div>

<% if @albums.count == 0 %>
  <h1 class="text-center mt-5">There are currently no albums in this Genre</h1>
<% else %>
  <%# <h1 class="text-center mt-5"><%= params[:genre] %></h1>



  <div class="flex flex-wrap justify-center mt-10 mb-10">
    <% @albums.each do |album| %>
      <div class="m-5 w-60 transform transition duration-500 hover:scale-110">
        <div class="flex justify-center">
          <% if album.album_cover.attached? %>
            <%= link_to image_tag(album.album_cover, class:"w-60"), album_path(album)%>
          <% end %> 
        </div>
        <div>
          <div class="flex justify-center text-center font-bold mt-2">
            <%= link_to album.title, album_path(album), class: "italic" %>
          </div>
          <div class="flex justify-center text-center mt-1">
            <%= album.artist %>
          </div>
          <div class="flex justify-center text-center text-sm mt-3">
            <%= album.genre.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

