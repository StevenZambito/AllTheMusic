<% if @albums.count == 0 %>
  <h1 class="text-center mt-5">There are currently no albums in this Genre</h1>
<% else%>
  <h1 class="text-center mt-5"><%= params[:genre] %></h1>

  <div class="flex flex-wrap justify-center border-2 border-green-400 mt-10 mb-10">
    <% @albums.each do |album| %>
      <div class="m-5">
        <div>
          <% if album.album_cover.attached? %>
            <%= link_to image_tag(album.album_cover, class:"w-60"), album_path(album)%>
          <% end %> 
        </div>
        <div>
          <div class="flex justify-center font-bold mt-1">
            <%= link_to album.title, album_path(album), class: "italic" %>
          </div>
          <div class="flex justify-center text-center">
            <%= album.artist %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

