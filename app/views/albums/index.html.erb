<% if @albums.count == 0 %>
  <h1 class="text-center mt-5">There are currently no albums in this Genre</h1>
<% else%>
  <h1 class="text-center mt-5"><%= params[:genre] %></h1>

  <div class="flex justify-center border-2 border-green-400 mt-10">
    <% @albums.each do |album| %>
        <div class="bg-pink-600">
          <% if album.album_cover.attached? %>
            <%= link_to image_tag(album.album_cover, class:"w-60"), album_path(album)%>
          <% end %> 
        </div>
        <div class="flex flex-col justify-center bg-yellow-600">
          <div class="bg-green-600 flex justify-center font-bold">
            <%= link_to album.title, album_path(album) %>
          </div>
          <div class="flex justify-center text-center">
            <%= album.artist %>
          </div>
        </div>
    <% end %>
  </div>
<% end %>

